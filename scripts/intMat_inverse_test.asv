% compare overapproximated interval matrix inverse and true inverse set

C = [2 3; 4 5];
G = [1 0.5; 0.2 2];
A = intervalMatrix(C,G);
   
% sample for intMat
N = 1000;
A_samp = randomSampling(A,N);
Ainv_lb = zeros(2,2);
Ainv_ub = zeros(2,2);
Ainv_set = zeros(2,2,N);
for i = 1:N
    Ai = A_samp{i};
    Ai_inv = inv(Ai);
    % update lb
    Ainv_lb = min(Ainv_lb, Ai_inv);
    % update ub
    Ainv_ub = max(Ainv_ub, Ai_inv);
    % store points
    Ainv_set(:,:,i) = Ai_inv;
end

